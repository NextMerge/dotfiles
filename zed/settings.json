// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "indent_guides": {
    "background_coloring": "disabled",
    "coloring": "indent_aware"
  },
  "colorize_brackets": true,
  "tab_size": 2,
  "sticky_scroll": {
    "enabled": true
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "model_parameters": []
  },
  "theme": "Catppuccin Mocha (red) - No Italics",
  "icon_theme": "Catppuccin Mocha",
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "ui_font_size": 16,
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_size": 18,
  "autosave": { "after_delay": { "milliseconds": 1000 } },
  "tabs": {
    "file_icons": true
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "shell": {
      "program": "/opt/homebrew/bin/fish"
    },
    "copy_on_select": true,
    "option_as_meta": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "scrollbar": {
    "axes": {
      "horizontal": false,
      "vertical": false
    }
  },
  "tab_bar": {
    "show": true
  },
  "file_types": {
    "Shell Script": [".env-sample"]
  },
  "languages": {
    "JavaScript": { "formatter": [{ "language_server": { "name": "biome" } }] },
    "TypeScript": {
      "formatter": [{ "language_server": { "name": "biome" } }]
    },
    "TSX": { "formatter": [{ "language_server": { "name": "biome" } }] },
    "JSON": { "formatter": [{ "language_server": { "name": "biome" } }] },
    "JSONC": { "formatter": [{ "language_server": { "name": "biome" } }] },
    "CSS": { "formatter": [{ "language_server": { "name": "biome" } }] },
    "GraphQL": { "formatter": [{ "language_server": { "name": "biome" } }] },
    "Fish": {
      "formatter": [
        {
          "external": {
            "command": "fish_indent"
          }
        }
      ]
    }
  }
}
